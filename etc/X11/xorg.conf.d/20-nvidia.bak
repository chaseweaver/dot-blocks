Section "ServerLayout"
	Identifier "layout"
	Screen 0 "nvidia"
	Inactive "intel"
EndSection

Section "Device"
	Identifier "nvidia"
	Driver "nvidia"
	BusID "PCI:2:0:0"
	Option "RegistryDwords" "PowerMizerEnable=0x1; PerfLevelSrc=0x3333; PowerMizerDefaultAC=0x3"
	Option "Coolbits" "1"
	Option "ConstrainCursor" "off"
	Option "AllowEmptyInitialConfiguration"
	Option "PrimaryGPU" "yes"
EndSection

Section "Device"
	Identifier "intel"
	Driver "modesetting"
	BusID "PCI:0:2:0"
EndSection

Section "Screen"
	Identifier "nvidia"
	Device "nvidia"
	Option "AllowEmptyInitialConfiguration" "on"
EndSection

Section "Screen"
	Identifier "intel"
	Device "intel"
EndSection
